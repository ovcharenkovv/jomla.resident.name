<?xml version="1.0" encoding="iso-8859-1"?>
<extension version="1.6.0" type="template" method="upgrade">
    <name>rt_afterburner</name>
    <version>1.6.0</version>
    <creationDate> February 21, 2012</creationDate>
    <author>RocketTheme, LLC</author>
    <authorEmail>support@rockettheme.com</authorEmail>
    <authorUrl>http://www.rockettheme.com</authorUrl>
    <copyright>Copyright 2005-2012 - RocketTheme.com</copyright>
    <license>GNU/GPL</license>
    <description>Afterburner</description>
  <files>
  	<filename>index.php</filename>
  	<filename>component.php</filename>
  	<filename>rt_utils.php</filename>
  	<filename>template_thumbnail.png</filename>
  	<filename>template_preview.png</filename>
  	<filename>template-overview.php</filename>
  	<filename>templateDetails.xml</filename>
  	<folder>admin</folder>
  	<folder>html</folder>
  	<folder>css</folder>
  	<folder>js</folder>
  	<folder>images</folder>
  	<folder>language</folder>
  </files>
  <positions>
  	<position>top</position>
  	<position>nav</position>
  	<position>showcase</position>
  	<position>advertisement</position>
  	<position>breadcrumb</position>
  	<position>left</position>
  	<position>right</position>
  	<position>user1</position>
  	<position>user2</position>
  	<position>user3</position>
  	<position>user4</position>
  	<position>user5</position>
  	<position>user6</position>
  	<position>user7</position>
  	<position>user8</position>
  	<position>user9</position>
  	<position>bottom</position>
  	<position>footer</position>
  	<position>debug</position>
  </positions>
  <languages folder="language">
      <language tag="en-GB">en-GB/en-GB.tpl_rt_afterburner.ini</language>
  </languages>
	<config>
	  <fields name="params">
	    <fieldset name="advanced">
	      <field name="colorStyle" type="list" default="light" label="COLOR_STYLE" description="COLOR_STYLE_DESC">
	        <option value="light">LIGHT</option>
	        <option value="light2">LIGHT2</option>
	        <option value="light3">LIGHT3</option>
	        <option value="light4">LIGHT4</option>
	        <option value="dark">DARK</option>
	        <option value="dark2">DARK2</option>
	        <option value="dark3">DARK3</option>
	        <option value="dark4">DARK4</option>
	      </field>
	      <field name="templateWidth" type="text" default="962" label="TEMPLATE_WIDTH" description="TEMPLATE_WIDTH_DESC" />
	      <field name="leftcolumnWidth" type="text" default="210" label="LEFTCOLUMN_WIDTH" description="LEFTCOLUMN_WIDTH_DESC" />
	      <field name="rightcolumnWidth" type="text" default="210" label="RIGHTCOLUMN_WIDTH" description="RIGHTCOLUMN_WIDTH_DESC" />
	      <field name="leftcolumnColor" type="list" default="color2" label="LEFTCOLUMN_COLOR" description="LEFTCOLOR_DESC">
	      	<option value="color1">COLOR1</option>
	      	<option value="color2">COLOR2</option>
	      </field>
	      <field name="rightcolumnColor" type="list" default="color1" label="RIGHTCOLUMN_COLOR" description="RIGHTCOLOR_DESC">
	      	<option value="color1">COLOR1</option>
	      	<option value="color2">COLOR2</option>
	      </field>
	      <field name="mootools_enabled" type="radio" default="1" label="MOOTOOLS_ENABLED" description="MOOTOOLS_ENABLED_DESC">
	      	<option value="0">N</option>
	      	<option value="1">Y</option>
	      </field>
	      <field name="caption_enabled" type="radio" default="1" label="CAPTION_ENABLED" description="CAPTION_ENABLED_DESC">
	      	<option value="0">N</option>
	      	<option value="1">Y</option>
	      </field>
	      <field name="rocketthemeLogo" type="radio" default="1" label="RT_LOGO" description="RT_LOGO_DESC">
	      	<option value="0">N</option>
	      	<option value="1">Y</option>
	      </field>
	    </fieldset>
	  </fields>
	</config>
</extension>